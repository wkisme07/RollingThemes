<div id="box">
  <h1>Rolling Themes</h1>
  <div id="block-login" class="block">
    <h2>Login</h2>
    <div class="content login">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end %>
      </div>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form login'}) do |f| %>
        <div class="group wat-cf">
          <div class="left">
            <%= f.label :email, :class => 'label right' %>
          </div>
          <div class="right">
            <%= f.email_field :email, :class => 'text_field' %>
          </div>
        </div>
        <div class="group wat-cf">
          <div class="left">
            <%= f.label :password, :class => 'label right' %>
          </div>
          <div class="right">
            <%= f.password_field :password, :class => 'text_field' %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="right login-remember-me">
              <%= f.check_box :remember_me, :class => 'checkbox' %>
              <%= f.label :remember_me, :class => 'checkbox' %>
            </div>
          <% end -%>
        </div>

        <div class="group navform wat-cf">
          <div class="right">
            <button type="submit" class="button">
              <%= image_tag 'key.png', :alt => '-' %> Login
            </button>

            <%= link_to "Forgot your password?", new_user_password_path, :class => 'login-forgot' %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

<%= content_for :stylesheet do %>
  <%= stylesheet_link_tag "web_app_theme" %>
<% end %>